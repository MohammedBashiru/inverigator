{
  "name": "inverigator",
  "displayName": "inverigator",
  "description": "Jump to InversifyJS implementation from an injected type",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inversifyNavigator.goToImplementation",
        "title": "Go to Inversify Implementation",
        "icon": "$(symbol-method)",
        "category": "Inverigator"
      },
      {
        "command": "inverigator.showBindings",
        "title": "Show All Bindings",
        "icon": "$(list-flat)",
        "category": "Inverigator"
      },
      {
        "command": "inverigator.rescan",
        "title": "Rescan Container Files",
        "icon": "$(refresh)",
        "category": "Inverigator"
      },
      {
        "command": "inverigator.showInjections",
        "title": "Show Injection Mappings",
        "icon": "$(symbol-interface)",
        "category": "Inverigator"
      },
      {
        "command": "inverigator.generateIgnoreFile",
        "title": "Generate .inverigatorignore File",
        "icon": "$(new-file)",
        "category": "Inverigator"
      },
      {
        "command": "inverigator.goToImplementationWithToken",
        "title": "Go to Implementation (With Token)",
        "category": "Inverigator"
      }
    ],
    "configuration": {
      "title": "Inverigator",
      "properties": {
        "inverigator.containerPaths": {
          "type": "array",
          "default": [
            "**/container.ts",
            "**/inversify.config.ts",
            "**/ioc.ts"
          ],
          "description": "Glob patterns for InversifyJS container files",
          "items": {
            "type": "string"
          }
        },
        "inverigator.autoScanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically rescan container files when they are saved"
        },
        "inverigator.maxScanDepth": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum depth to follow imports when scanning for bindings in modular containers"
        },
        "inverigator.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show clickable 'Go to Implementation' links above InversifyJS injections and bindings"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "inversifyNavigator.goToImplementation",
          "when": "resourceExtname == .ts || resourceExtname == .tsx || resourceExtname == .js || resourceExtname == .jsx",
          "group": "navigation@1.5"
        },
        {
          "command": "inverigator.showBindings",
          "when": "resourceExtname == .ts || resourceExtname == .tsx || resourceExtname == .js || resourceExtname == .jsx",
          "group": "9_inverigator@1"
        }
      ],
      "editor/title": [
        {
          "command": "inverigator.showBindings",
          "when": "resourceExtname == .ts || resourceExtname == .tsx",
          "group": "navigation"
        },
        {
          "command": "inverigator.rescan",
          "when": "resourceExtname == .ts || resourceExtname == .tsx",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "inversifyNavigator.goToImplementation",
          "when": "editorTextFocus"
        },
        {
          "command": "inverigator.showBindings"
        },
        {
          "command": "inverigator.rescan"
        }
      ],
      "explorer/context": [
        {
          "command": "inverigator.rescan",
          "when": "resourceExtname == .ts || resourceExtname == .tsx",
          "group": "7_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "inversifyNavigator.goToImplementation",
        "key": "ctrl+alt+f12",
        "when": "editorTextFocus && !editorReadonly",
        "mac": "cmd+alt+f12"
      },
      {
        "command": "inversifyNavigator.goToImplementation",
        "key": "alt+f12",
        "when": "editorTextFocus && !editorReadonly",
        "mac": "alt+f12"
      },
      {
        "command": "inversifyNavigator.goToImplementation",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus && !editorReadonly",
        "mac": "cmd+alt+i"
      }
    ]
  },
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "minimatch": "^10.0.3",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5"
  }
}
