{
  "name": "inverigator",
  "displayName": "inverigator",
  "description": "Jump to InversifyJS implementation from an injected type",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inversifyNavigator.goToImplementation",
        "title": "Go to Inversify Implementation"
      },
      {
        "command": "inverigator.showBindings",
        "title": "Inverigator: Show All Bindings"
      },
      {
        "command": "inverigator.rescan",
        "title": "Inverigator: Rescan Container Files"
      }
    ],
    "configuration": {
      "title": "Inverigator",
      "properties": {
        "inverigator.containerPaths": {
          "type": "array",
          "default": ["**/container.ts", "**/inversify.config.ts", "**/ioc.ts"],
          "description": "Glob patterns for InversifyJS container files",
          "items": {
            "type": "string"
          }
        },
        "inverigator.autoScanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically rescan container files when they are saved"
        }
      }
    }
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
